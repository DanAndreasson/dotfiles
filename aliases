# Unix
alias ll="ls -al"
alias l="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
alias b="bundle"

# Rails
alias migrate="bundle exec rake db:migrate"
alias rollback="bundle exec rake db:rollback"
alias s="rspec"

#neovim
alias vim="nvim"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
