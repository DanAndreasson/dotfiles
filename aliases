# Unix
alias ll="ls -ahl"
alias l="ls -ahl"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Tmux
alias tx="tmuxinator"
alias work="tmuxinator start learn2-api" # Starts api, which starts web

# Bundler
alias b="bundle"

# Rails
alias migrate="bundle exec rake db:migrate"
alias migrate:redo="bundle exec rake db:migrate:redo"
alias migrate:status="bundle exec rake db:migrate:status"
alias migrate:up="bundle exec rake db:migrate:up"
alias migrate:down="bundle exec rake db:migrate:down"
alias rollback="bundle exec rake db:rollback"
alias s="rspec"

#neovim
alias vim="nvim"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Git
alias gst="git status"
alias gcm="git commit -m"
alias gcam="git commit -am"
alias amend="git commit --no-edit --amend"
alias gout="git checkout"
alias gstats="git diff --stat master"
alias pushb='git push -u origin $(git rev-parse --abbrev-ref HEAD | tail -n 1)'
alias ntc="name-that-color"

alias tmux='tmux -2'

alias sprintlog='git --no-pager log --since="14 days ago" --pretty=format:"%C(yellow)%h%Creset - %C(cyan)%ad%Creset - %C(magenta)%<(20,trunc)%an%Creset: %s"  --date=short'
